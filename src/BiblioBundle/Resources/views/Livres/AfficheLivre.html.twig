    <h1>Liste des Livres</h1>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Auteur</th>

            <th>Nb d'emprunte</th>
            <th>quantite</th>
            <th>Description</th>
            <th>Image</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

        {% for cc in list %}
            <tr>
                <td>{{ cc.idLivre }}</td>
                <td>{{ cc.nom }}</td>
                <td>{{ cc.auteur }}</td>
                <td>{{ cc.nbpersonnes }}</td>
                <td>{{ cc.quantite }}</td>
                <td>{{ cc.description }}</td>
                <td height="200px" width="300px" style="background-image: url('{{ asset('images/' ~ cc.image) }}')">

                <td>
                    <a href="{{ path('DeleteLivre',{'id':cc.idLivre}) }}">Delete</a>
                </td>
                <td> <a href="{{ path('UpdateLivre',{'id':cc.idLivre}) }}">Update</a>
                </td>
            </tr>
        {% endfor %}

    </table>
